@model IEnumerable<ToDo.Models.ToDoItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ToDoText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ToDoText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ToDoItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ToDoItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ToDoItemID })
        </td>
    </tr>
}

</table>
